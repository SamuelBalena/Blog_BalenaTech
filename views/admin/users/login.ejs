<%- include('../../../views/partials/header') -%>
<div class="login">
    <div class="card-box">
        <h2>Login</h2>
        <form action="/authenticate" method="post">
            <input class="form-control" type="email" name="email" placeholder="Digite seu email">
            <input class="form-control" type="password" name="password" placeholder="Sua senha">
            <button type="submit" class="btn btn-success btn-block">Entrar</button>
        </form>
    </div>
</div>
<%- include('../../../views/partials/footer') -%>

<style>
    .card-box {
        background-color: #fff;
        display: flex;
        flex-direction: column;
        width: 600px;
        height: auto;
        padding: 40px;
        border-radius: 10px;
        margin-top: 30px;
        box-shadow: 0 0 1em rgba(0, 0, 0, 0.2);
    }

    body {
        background: rgb(58,58,190);
        background: linear-gradient(90deg, rgba(58,58,190,1) 0%, rgba(0,212,255,1) 86%);
    }

    .login {
        margin-top: 25vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    input {
        margin-bottom: 15px;
    }

    h2::after{
        content: '';
        display: block;
        width: 50px;
        height: 3px;
        background: #212529;
        margin: auto 0px;
        margin-top: 15px;
